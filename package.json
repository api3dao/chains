{
  "name": "@api3/chains",
  "license": "MIT",
  "version": "3.4.2",
  "author": "API3 DAO",
  "private": false,
  "main": "./dist/index.js",
  "repository": "git@github.com:api3dao/chains",
  "bugs": {
    "url": "https://github.com/api3dao/chains/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn clean && yarn generate:chains && tsc -p tsconfig.build.json",
    "clean": "rimraf ./dist",
    "generate:chains": "ts-node scripts/generate-chains.ts",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:prettier": "prettier --check \"./**/*.{ts,js,md,json}\"",
    "prepare": "husky install",
    "prepublishOnly": "yarn validate:chains && yarn build",
    "prettier": "prettier --write \"./**/*.{ts,js,md,json}\"",
    "providers:ping": "ts-node scripts/ping-providers.ts",
    "providers:time": "ts-node scripts/calculate-average-block-times.ts",
    "test": "node --test --loader ts-node/esm ./src/**/*.test.ts",
    "validate": "yarn validate:chains",
    "validate:chains": "ts-node scripts/validate-chains.ts"
  },
  "dependencies": {
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@slack/web-api": "^6.9.0",
    "@types/node": "^20.5.7",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "viem": "^1.10.9"
  }
}
