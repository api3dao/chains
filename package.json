{
  "name": "@api3/chains",
  "license": "MIT",
  "version": "1.4.0",
  "author": "API3 DAO",
  "private": false,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/es6/index.js",
  "repository": "git@github.com:api3dao/chains",
  "bugs": {
    "url": "https://github.com/api3dao/chains/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build:cjs": "yarn tsc -p tsconfig.build-cjs.json",
    "build:es6": "yarn tsc -p tsconfig.build-es6.json",
    "build:esm": "yarn tsc -p tsconfig.build-esm.json",
    "build": "yarn clean && yarn generate:chains && yarn build:cjs && yarn build:es6 && yarn build:esm",
    "clean": "rimraf ./dist",
    "dev": "ts-node scripts/generate-chains.ts --watch",
    "chains:rename": "ts-node scripts/rename-chain-file.ts",
    "env:write": "ts-node scripts/write-env-variables.ts",
    "lint": "exit 0",
    "generate:chains": "ts-node scripts/generate-chains.ts",
    "prepare": "husky install",
    "prepublishOnly": "yarn validate:chains",
    "prettier": "prettier --write \"./**/*.{js,md,json}\"",
    "validate": "yarn validate:chains && yarn validate:providers",
    "validate:chains": "ts-node scripts/validate-chains.ts",
    "validate:providers": "ts-node scripts/validate-providers.ts"
  },
  "dependencies": {
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "chokidar": "^3.5.3",
    "ethers": "^6.2.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
