{
  "name": "@api3/chains",
  "license": "MIT",
  "version": "2.1.0",
  "author": "API3 DAO",
  "private": false,
  "main": "./dist/index.js",
  "repository": "git@github.com:api3dao/chains",
  "bugs": {
    "url": "https://github.com/api3dao/chains/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm chains:generate && tsc -p tsconfig.build.json",
    "clean": "rimraf ./dist",
    "dev": "ts-node scripts/generate-chains.ts --watch",
    "chains:generate": "ts-node scripts/generate-chains.ts",
    "env:write": "ts-node scripts/write-env-variables.ts",
    "lint": "eslint . --ext .js,.ts",
    "prepare": "husky install",
    "prepublishOnly": "pnpm validate:chains",
    "prettier": "prettier --write \"./**/*.{js,md,json}\"",
    "providers:ping": "ts-node scripts/ping-providers.ts",
    "test": "node --test --loader ts-node/esm ./src/**/*.test.ts",
    "validate": "pnpm validate:chains",
    "validate:chains": "ts-node scripts/validate-chains.ts"
  },
  "dependencies": {
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.38.0",
    "eslint-plugin-import": "^2.27.5",
    "ethers": "^6.3.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
